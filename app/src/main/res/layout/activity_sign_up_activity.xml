<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:textColor="#303F9F"
                android:text="FindMyBus"
                android:textSize="33sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="59dp" />

            <View
                android:id="@+id/border"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#000000"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/title_text" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="246dp"
                android:layout_height="42dp"
                android:background="@drawable/layout_bottom"
                android:ems="10"
                android:hint="Email"
                android:text=""
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/border"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.14" />

            <EditText
                android:id="@+id/pass_input"
                android:layout_width="246dp"
                android:layout_height="42dp"
                android:background="@drawable/layout_bottom"
                android:ems="10"
                android:hint="Password"
                android:text=""
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingStart="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.14"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/login_email" />

            <EditText
                android:id="@+id/uname_input"
                android:layout_width="242dp"
                android:layout_height="42dp"
                android:background="@drawable/layout_bottom"
                android:ems="10"
                android:hint="Username"
                android:text=""
                android:inputType="text"
                android:maxLength="10"
                android:paddingStart="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.135"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@+id/pass_input" />

            <EditText
                android:id="@+id/bus_input"
                android:layout_width="242dp"
                android:layout_height="42dp"
                android:background="@drawable/layout_bottom"
                android:ems="10"
                android:hint="Bus No."
                android:text=""
                android:inputType="number"
                android:maxLength="2"
                android:paddingStart="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.136"
                android:layout_marginTop="74dp"
                app:layout_constraintTop_toBottomOf="@+id/pass_input" />

            <View
                android:id="@+id/border_2"
                android:layout_width="395dp"
                android:layout_height="1dp"
                android:background="#000000"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/bus_input" />

            <TextView
                android:id="@+id/avatar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Choose Avatar"
                android:textColor="#E91E63"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@+id/border_2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="27dp"
                app:layout_constraintTop_toBottomOf="@+id/avatar_title"
                app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/linearLayout2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:onClick="image_click"
                        app:srcCompat="@drawable/avatar_1" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:onClick="image_click"
                        app:srcCompat="@drawable/avatar_2" />

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:onClick="image_click"
                        app:srcCompat="@drawable/avatar_3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:onClick="image_click"
                        app:srcCompat="@drawable/avatar_4" />

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:onClick="image_click"
                        app:srcCompat="@drawable/avatar_5" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:onClick="image_click"
                        app:srcCompat="@drawable/avatar_6" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/border_3"
                android:layout_width="395dp"
                android:layout_height="1dp"
                android:background="#000000"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <Button
                android:id="@+id/signUp_button"
                android:layout_width="154dp"
                android:layout_height="49dp"
                android:background="#E91E63"
                android:text="Sign Up"
                android:onClick="create"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="53dp"
                app:layout_constraintTop_toBottomOf="@+id/border_3"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="30dp"
                app:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>